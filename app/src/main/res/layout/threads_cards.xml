<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_borders"
            android:id="@+id/cards">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:text="username"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="200dp"
                android:id="@+id/dev_name_linear_layout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="#4884ce"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/dev_name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dev_name_linear_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/thread_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="this"
                    android:textColor="#000000"
                    android:textSize="25dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="200dp"
                android:id="@+id/number_of_lines_linear_layout"
                android:layout_below="@+id/dev_name_linear_layout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="#4884ce"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/number_of_lines" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>